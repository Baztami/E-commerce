{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

<div class="container">
<h1>Inscription sur le site </h1>
{{ form_start(form) }}
<div class="form-group"> {{ form_row(form.username, { 'attr' : { 'class' : 'form-control'}}) }}</div>
<div class="form-group">{{ form_row(form.email, { 'attr' : { 'class' : 'form-control'}}) }}</div>
<div class="form-group">{{ form_row(form.password, { 'attr' : { 'class' : 'form-control'}}) }}</div>
<div class="form-group">{{ form_row(form.confirm_password, { 'attr' : { 'class' : 'form-control'}}) }}</div>

<button type="submit" class="btn btn-danger">inscription</button>
{{ form_end(form) }}

</div>
{% endblock %}
